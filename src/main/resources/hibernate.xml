<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/schooljournal053</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <mapping class="com.school053.journal.model.events.ChildMark"/>
        <mapping class="com.school053.journal.model.events.FileResource"/>
        <mapping class="com.school053.journal.model.events.Lesson"/>
        <mapping class="com.school053.journal.model.events.LessonEvent"/>
        <mapping class="com.school053.journal.model.events.LessonEventType"/>
        <mapping class="com.school053.journal.model.events.Subject"/>
        <mapping class="com.school053.journal.model.security.Authority"/>
        <mapping class="com.school053.journal.model.security.User"/>
        <mapping class="com.school053.journal.model.users.Child"/>
        <mapping class="com.school053.journal.model.users.Parent"/>
        <mapping class="com.school053.journal.model.users.SchoolClass"/>
        <mapping class="com.school053.journal.model.users.Teacher"/>
    </session-factory>
</hibernate-configuration>